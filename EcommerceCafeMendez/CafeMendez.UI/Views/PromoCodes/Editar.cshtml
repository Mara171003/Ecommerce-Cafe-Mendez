@model CafeMendez.UI.dataBase.PromoCodes

@{
    ViewBag.Title = "Editar Código Promocional";
}

<h2>Editar Código Promocional</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Code, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DiscountPercentage, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DiscountPercentage, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ExpirationDate, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.ExpirationDate, new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
            @Html.CheckBoxFor(model => model.IsActive)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a href="@Url.Action("Listar")" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
}
