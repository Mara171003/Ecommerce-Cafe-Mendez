@model IEnumerable<CafeMendez.UI.dataBase.PromoCodes>

@{
    ViewBag.Title = "Lista de Códigos Promocionales";
}

<h2>Lista de Códigos Promocionales</h2>
<p>
    <a href="@Url.Action("Crear")" class="btn btn-primary">Crear Nuevo Código</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descuento (%)</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Expiración</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.DiscountPercentage%</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.ExpirationDate.ToShortDateString()</td>
                <td>@(item.IsActive ? "Activo" : "Inactivo")</td>
                <td>
                    <a href="@Url.Action("Detalles", new { id = item.Id })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Eliminar", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>